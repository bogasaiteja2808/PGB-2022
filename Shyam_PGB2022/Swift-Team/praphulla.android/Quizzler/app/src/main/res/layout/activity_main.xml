<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FAF3F6"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/callerVar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#FAF3F6"
            android:backgroundTint="#FAF3F6"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:text="Quizzler"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/logoIV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="#FAF3F6"
            app:srcCompat="@drawable/img_1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pgtextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:max="10"
            android:minWidth="200dp"
            android:minHeight="400dp"
            android:progress="0"
            android:progressTint="#FAF3F6"
            android:visibility="visible" />

        <SeekBar

            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <TextView
            android:id="@+id/questionTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAF3F6"
            android:fontFamily="sans-serif"
            android:foregroundTint="#C13131"
            android:gravity="fill_horizontal"
            android:inputType="textMultiLine"
            android:isScrollContainer="true"
            android:keepScreenOn="true"
            android:maxLines="3"
            android:minHeight="48dp"
            android:text="Question:"
            android:textAlignment="gravity"
            android:textColorLink="#875E5E"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/spaceV"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#FAF3F6"
            android:backgroundTint="#FAF3F6" />

        <LinearLayout
            android:id="@+id/layoutforOptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FAF3F6"
            android:orientation="vertical">

            <Button
                android:id="@+id/butOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:backgroundTint="#875E5E"
                android:fontFamily="@font/autour_one"
                android:text="choice1"
                android:textSize="14sp" />

            <Button
                android:id="@+id/butOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:backgroundTint="#875E5E"
                android:fontFamily="@font/autour_one"
                android:text="choice2" />/>

            <Button
                android:id="@+id/butOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:backgroundTint="#875E5E"
                android:fontFamily="@font/autour_one"
                android:text="choice3" />/>

            <Button
                android:id="@+id/butOption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:backgroundTint="#875E5E"
                android:fontFamily="@font/autour_one"
                android:text="choice4" />/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/butSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#875E5E"
                android:gravity="center"
                android:text="Next"
                android:textColorHighlight="#CAC8C8"
                android:visibility="visible"
                app:cornerRadius="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FAF3F6"
                android:backgroundTint="#FAF3F6"
                android:foregroundTint="#FAF3F6"
                android:orientation="horizontal" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>