package day3;
import java.util.*;
class charCount{
	public static void main(String[]args){
		String s="Hello World";
		s=s.replaceAll(" ", "");
		HashMap<Character,LinkedList<Integer>>hm=new HashMap();
		for(int i=0;i<s.length();i++){
			char c=s.charAt(i);
		 	LinkedList l;
			if(!hm.containsKey(c)){
				l=new LinkedList();
			}
			else{
				l=hm.get(c);
			}
			l.add(i);
			hm.put(c,l);
		}
		System.out.println(hm.toString());
	}
}